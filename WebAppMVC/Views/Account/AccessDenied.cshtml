@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h3 class="mb-0">Access Denied</h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
                </div>
                <h4 class="text-danger mb-3">You don't have permission to access this resource</h4>
                <p class="text-muted mb-4">
                    The page you are trying to access requires authentication or you don't have sufficient privileges.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-md-2">Login</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
