@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">User Dashboard</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Welcome to Your Dashboard</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    This is a protected area that requires authentication. You have successfully logged in and can access this dashboard.
                </p>
                <p class="text-muted">
                    Here you can manage your account, view your profile information, and access other protected features of the application.
                </p>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-primary" type="button">
                                View Profile
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-secondary" type="button">
                                Settings
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-info" type="button">
                                Reports
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-grid">
                            <button class="btn btn-outline-warning" type="button">
                                Help & Support
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">User Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8">@ViewBag.Username</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@ViewBag.Email</dd>

                    @if (!string.IsNullOrEmpty(ViewBag.FirstName))
                    {
                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@ViewBag.FirstName</dd>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.LastName))
                    {
                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@ViewBag.LastName</dd>
                    }

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success">Active</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">Session Info</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <small class="text-muted">
                        Login Time: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                    </small>
                </p>
                <div class="d-grid">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
